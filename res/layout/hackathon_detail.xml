<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backrepeat"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/hackathonLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hackathonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hackathon"
            android:textSize="30sp" />
        
        <TextView
            android:id="@+id/hackathonTotals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Hackers: 34 | Total Hacks: 19"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hackathonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/23/2013"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/hackathonEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/24/2013"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/hackathonDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolores set afsdaf fdsa fsad fsda fsadfjsd fsdaf dsalk fjsdaf jsadfjsdlfjsd flksdjf sdafsdjklf sdjlfsdkl fskljfdsjkldfsajkldfsajk fdsajklfdskjfasdklfjsdkf asdf sdaf dsfsadf sadf sad fsd fds fsd fsda fdsbgfvgtbtgftsdgftdsgtgtgtg ."
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/hackathonLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Brunswick, NJ, USA"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>