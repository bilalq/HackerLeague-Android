<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/hackathonLogo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/hackathonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hackathon"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/hackathonTotals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Total Hackers: 34 | Total Hacks: 19"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hackathonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date: 04/23/2013"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hackathonEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date: 04/24/2013"
                android:layout_marginBottom="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hackathonDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Lorem ipsum dolores set afsdaf fdsa fsad fsda fsadfjsd fsdaf dsalk fjsdaf jsadfjsdlfjsd flksdjf sdafsdjklf sdjlfsdkl fskljfdsjkldfsajkldfsajk fdsajklfdskjfasdklfjsdkf asdf sdaf dsfsadf sadf sad fsd fds fsd fsda fdsbgfvgtbtgftsdgftdsgtgtgtg ."
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hackathonLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Brunswick, NJ, USA"
                android:textSize="15sp" />

            <Button
                android:id="@+id/hacks_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See Hacks" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>